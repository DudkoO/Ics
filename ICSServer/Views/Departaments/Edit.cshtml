@model ICSServer.Models.Departament

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Departament</h4>
<hr />
<div class="row">
    <div class="">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="col-md-6">
                    <img src="~/Files/Images/@Model.Image"
                         class="rounded-circle"
                         height="90" width="90"
                         asp-append-version="true" />

                </div>
            </div>
            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <div class="custom-file">
                    <input type="file" class="custom-file-input" id="customFile" name="newImage">
                    <label class="custom-file-label" for="customFile">Choose file</label>
                </div>

            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" ></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BasicDiscipline" class="control-label"></label>
                <textarea asp-for="BasicDiscipline" class="form-control" ></textarea>
                <span asp-validation-for="BasicDiscipline" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecommendedKnowledge" class="control-label"></label>
                <textarea asp-for="RecommendedKnowledge" class="form-control" ></textarea>
                <span asp-validation-for="RecommendedKnowledge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">

                <div class="form-group">
                    <label asp-for="HeadOfDepartmentId" class="control-label"></label>

                    <select asp-for="HeadOfDepartmentId" class="form-control" asp-items="ViewBag.Teachers "></select>

                </div>
            </div>
            <div class="form-group">
                <div class="form-group">
                    <label asp-for="Specialty" class="control-label"></label>
                    <select asp-for="SpecialtyId" class="form-control" asp-items="ViewBag.Specialties "></select>

                </div>
            </div>




            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section scripts{
    <script type="text/javascript">

        // Add the following code if you want the name of the file appear on select
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>
    <script>
        document.addEventListener("DOMContentLoaded", function (event) {
            var editor = CKEDITOR.replace('Description');
            var editor = CKEDITOR.replace('BasicDiscipline');
            var editor = CKEDITOR.replace('RecommendedKnowledge');

        });
    </script>
}
