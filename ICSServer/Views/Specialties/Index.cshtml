@model IEnumerable<ICSServer.Models.Specialty>

@{
    ViewData["Title"] = "Index";
}
@{await Html.RenderPartialAsync("ICSmenu");}
<h1>Специальности</h1>

<p>
    <a asp-action="Create">Создать новую</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SpecialtyCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SpecialtyNumberCode)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SpecialtyCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpecialtyNumberCode)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Редактировать</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Детали</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
        }
    </tbody>
</table>
