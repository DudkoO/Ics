@model ICSServer.Models.Teacher

@{
    ViewData["Title"] = "Details";
}

<h1>Детали</h1>

<div>
    <h4>Преподаватель</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            
        </dt>
        <dd class="col-sm-10">
            
            <div class="form-group">
                <img src="~/Files/Images/@Model.Image"
                     class="rounded-circle"
                     height="60" width="60"
                     asp-append-version="true" />
            </div>
        </dd>


        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Patronymic)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Patronymic)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.Description)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a> |
