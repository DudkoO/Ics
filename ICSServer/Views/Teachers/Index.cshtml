@model IEnumerable<ICSServer.Models.Teacher>

@{
    ViewData["Title"] = "Index";
}
@{await Html.RenderPartialAsync("ICSmenu");}
<h1>Преподаватели</h1>

<p>
    <a asp-action="Create">Добавить</a>

    <form asp-controller="Teachers" asp-action="Index">
        @Html.DisplayNameFor(model => model.LastName) <input type="text" name="SearchString">
        <input type="submit" value="Filter" />
    </form>
</p>

<table class="table">
    <thead>
        <tr>
            <th>

            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patronymic)
            </th>
            <th>
                @Html.DisplayNameFor(model =>model.AcademicDegree)
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <th>
                <img src="~/Files/Images/@item.Image"
                     class="rounded-circle"
                     height="60" width="60"
                     asp-append-version="true" />
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patronymic)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AcademicDegree.Name)
            </td>


            <td>
                <a asp-controller="Consultations" asp-action="Index" asp-route-id="@item.Id">Консультации</a> |                
                <a asp-action="Edit" asp-route-id="@item.Id">Редактировать</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Просмотр</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
        }
    </tbody>
</table>
